<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/my_heard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/my_inheriteds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include layout="@layout/my_item" />

            <Button
                android:id="@+id/my_tuichu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_42dp"
                android:layout_marginBottom="@dimen/size_70dp"
                android:layout_marginLeft="@dimen/size_15dp"
                android:layout_marginRight="@dimen/size_15dp"
                android:layout_marginTop="@dimen/size_50dp"
                android:background="@color/tuichu"
                android:text="@string/tuichu"
                android:textColor="@color/colorBai"
                android:textSize="@dimen/size_40px" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>