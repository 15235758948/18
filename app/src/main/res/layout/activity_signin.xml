<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        android:orientation="horizontal"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/sign_back"
            android:padding="@dimen/size_10dp"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:src="@drawable/icon_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_40dp"
            android:gravity="center"
            android:text="签到"
            android:id="@+id/textView4"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12">

        <TextView
            android:id="@+id/sign_user"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_weight="3"
            android:gravity="center"
            android:text="01234567890" />

        <ImageView
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_2dp"
            android:layout_weight="1"
            android:src="@drawable/gold" />

        <TextView
            android:id="@+id/sign_jifen"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="104积分"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/sign_day"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_weight="6"
            android:gravity="center"
            android:text="您已连续签到0天" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="150dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/sign_bg" />

        <Button
            android:id="@+id/button_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="#f67b00"
            android:text="点击进行签到" />
    </RelativeLayout>


</LinearLayout>